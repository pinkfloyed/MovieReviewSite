@using MovieReviewSite.Models
@model Movie

<div class="container mt-4">
    <div class="card shadow-sm border-0 rounded-3 mb-4">
        <div class="row g-0">
            <div class="col-md-4">
                <img src="@Model.PosterUrl" alt="@Model.Title" class="img-fluid rounded-start" />
            </div>
            <div class="col-md-8">
                <div class="card-body">
                    <h2 class="card-title">@Model.Title</h2>
                    <p><strong>Genre:</strong> @Model.Genre</p>
                    <p><strong>Release Date:</strong> @(Model.ReleaseDate?.ToString("yyyy-MM-dd") ?? "N/A")</p>
                    <p><strong>Description:</strong> @Model.Description</p>
                    <p>
                        <strong>Average Rating:</strong>
                        @(Model.Reviews?.Any() == true ? Model.Reviews.Average(r => r.Rating).ToString("0.0") : "No ratings yet")
                    </p>
                </div>
            </div>
        </div>
    </div>

    <div class="card shadow-sm border-0 rounded-3 mb-4">
        <div class="card-header bg-primary text-white">
            <h4 class="mb-0">Reviews</h4>
        </div>
        <div class="card-body">
            @if (Model.Reviews?.Any() == true)
            {
                <ul class="list-group">
                    @foreach (var review in Model.Reviews)
                    {
                        <li class="list-group-item d-flex justify-content-between align-items-start">
                            <div>
                                <strong>@review.UserName</strong> rated <strong>@review.Rating</strong>/5
                                <p>@review.Comment</p>
                            </div>
                            <div>
                                <a asp-controller="Reviews" asp-action="Delete" asp-route-id="@review.Id" class="btn btn-sm btn-danger">Delete</a>
                            </div>
                        </li>
                    }
                </ul>
            }
            else
            {
                <p>No reviews yet.</p>
            }
        </div>
    </div>

    <a asp-controller="Reviews" asp-action="Create" asp-route-movieId="@Model.Id" class="btn btn-success mb-5">
        <i class="bi bi-plus-circle"></i> Add Review
    </a>

    <a asp-action="Index" class="btn btn-secondary mb-5"><i class="bi bi-arrow-left"></i> Back to Movies</a>
</div>
