@model MovieReviewSite.Models.Review

@{
    ViewData["Title"] = "Delete Review";
}

<div class="container mt-4">
    <div class="card shadow-sm border-0 rounded-3">
        <div class="card-header bg-danger text-white">
            <h4 class="mb-0">Delete Review</h4>
        </div>
        <div class="card-body">
            <p>Are you sure you want to delete this review by <strong>@Model.UserName</strong>?</p>
            <p><strong>Rating:</strong> @Model.Rating/5</p>
            <p><strong>Comment:</strong> @Model.Comment</p>

            <form asp-action="Delete" method="post">
                @Html.AntiForgeryToken()
                <input type="hidden" name="id" value="@Model.Id" />

                <button type="submit" class="btn btn-danger">Yes, Delete</button>
                <a asp-controller="Movies" asp-action="Details" asp-route-id="@Model.MovieId" class="btn btn-secondary">Cancel</a>
            </form>
        </div>
    </div>
</div>
